<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Report Title and Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    tools:text="Student Attendance Report" />

                <TextView
                    android:id="@+id/tv_report_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/report_type"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="Personal Report" />

            </LinearLayout>

            <!-- Report Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_reports"
                android:contentDescription="@string/report_icon"
                app:tint="@color/primary_color" />

        </LinearLayout>

        <!-- Report Date and Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/report_date"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                tools:text="Current Semester" />

            <TextView
                android:id="@+id/tv_report_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_summary"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                tools:text="Overall Attendance: 85.5%" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
