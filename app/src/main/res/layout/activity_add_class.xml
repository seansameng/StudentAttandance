<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:scrollbars="vertical"
    android:fillViewport="true">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_color"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Class"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter class details to create a new class"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:gravity="center" />

    </LinearLayout>

    <!-- Class Name Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name *"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etClassName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter class name (e.g., Computer Science 101)"
            android:background="@drawable/edit_text_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- Subject Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject *"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etSubject"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter subject (e.g., Computer Science)"
            android:background="@drawable/edit_text_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- Schedule Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule *"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etSchedule"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter schedule (e.g., Mon-Wed-Fri 9:00 AM)"
            android:background="@drawable/edit_text_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- Room Number Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Number"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etRoomNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter room number (e.g., Room 201)"
            android:background="@drawable/edit_text_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- Maximum Students Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Students"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMaxStudents"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter maximum number of students"
            android:background="@drawable/edit_text_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLines="1"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:background="@drawable/cancel_button_background"
            android:focusable="true"
            android:clickable="true" />

        <Button
            android:id="@+id/btnAddClass"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Add Class"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:focusable="true"
            android:clickable="true" />

    </LinearLayout>

    <!-- Required Fields Note -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Required fields"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp"
        android:gravity="center" />

</LinearLayout>
