<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<!--    <uses-permission android:name="android.permission.CAMERA" />-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".StudentAttendanceApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentAttendance"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Welcome Activity (Launcher) -->
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentAttendance.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity - Now enabled for fragment-based navigation -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance.NoActionBar" />

        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance"
            android:windowSoftInputMode="adjustResize" />



        <!-- Mark Attendance Activity - Now enabled -->
        <activity
            android:name=".activities.MarkAttendanceActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- View Attendance Activity -->
        <activity
            android:name=".activities.ViewAttendanceActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Reports Activity - Now enabled -->
        <activity
            android:name=".activities.ReportsActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

                <!-- Settings Activity - Now enabled -->
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />
            


        <!-- Home Dashboard Activity -->
        <activity
            android:name=".activities.HomeDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />
            

            




        <!-- Class Edit Activity -->
        <activity
            android:name=".activities.ClassEditActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Add Class Activity -->
        <activity
            android:name=".activities.AddClassActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Edit Class Activity -->
        <activity
            android:name=".activities.EditClassActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- User Edit Activity -->
        <activity
            android:name=".activities.UserEditActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Add User Activity -->
        <activity
            android:name=".activities.AddUserActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Edit User Activity -->
        <activity
            android:name=".activities.EditUserActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Class Details Activity -->
        <activity
            android:name=".activities.ClassDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

        <!-- Database Test Activity (for debugging) -->
        <activity
            android:name=".utils.DatabaseTestActivity"
            android:exported="false"
            android:theme="@style/Theme.StudentAttendance" />

            

            

            

            


    </application>

</manifest>